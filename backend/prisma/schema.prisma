// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:root@localhost:3306/onlinecompetition"
}

model User {
  id       Int      @id @default(autoincrement())
  username String
  password String
  role     Role
  grade    Int?
  class    String?
  groupId  Int?
  group    Group?   @relation(fields: [groupId], references: [id])
  tasks    Task[]
  results  Result[]
}

model Group {
  id            Int         @id @default(autoincrement())
  name          String
  description   String
  users         User[]
  competitionId Int
  competition   Competition @relation(fields: [competitionId], references: [id])
}

model Competition {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  grade       Int
  startDate   DateTime
  endDate     DateTime
  groups      Group[]
  tasks       Task[]
  results     Result[]
}

model Task {
  id           Int           @id @default(autoincrement())
  word1        String
  word2        String
  word3        String
  word4        String
  grade        Int
  teacherId    Int
  teacher      User          @relation(fields: [teacherId], references: [id])
  competitions Competition[]

  @@unique([word1, word2, word3, word4, grade])
}

model Result {
  id            Int         @id @default(autoincrement())
  competitionId Int
  competition   Competition @relation(fields: [competitionId], references: [id])
  userId        Int
  user          User        @relation(fields: [userId], references: [id])
  score         Int
  time          Int
}

enum Role {
  ADMIN
  JUDGE
  TEACHER
  STUDENT
}
